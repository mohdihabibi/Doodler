<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <com.raed.drawingview.BrushView
        android:id="@+id/brush_view"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_drawable"
        android:layout_marginStart="117dp"
        android:layout_marginTop="201dp"
        android:padding="4dp"
        app:brush_color="@color/colorPrimary" />

    <com.raed.drawingview.DrawingView
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:brush="pencil"
        app:brush_color="#2187bb"
        app:brush_size="1"
        app:drawing_background_color="#dddddd"
        tools:visibility="visible" />


    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:background="@drawable/rounded_drawable"
        android:hint="Description of the photo"
        android:textColorHint="#111011"
        android:textStyle="bold|italic" />


    <ImageButton
        android:id="@+id/brushbtn"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/rounded_drawable"
        app:srcCompat="@drawable/ic_brush_black_24dp" />

    <ImageButton
        android:id="@+id/save_btn"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_below="@+id/description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/brushbtn"
        android:background="@drawable/rounded_drawable"
        app:srcCompat="@drawable/ic_save_24dp" />

    <ImageButton
        android:id="@+id/photo_insert_btn"
        android:layout_width="66dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/rounded_drawable"
        app:srcCompat="@drawable/ic_insert_photo_black_24dp" />

    <Button
        android:id="@+id/colorbtn"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="274dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/rounded_drawable"
        android:fontFamily="casual"
        android:text="open color picker"
        android:textColor="#080809"
        android:textStyle="bold|italic" />


</RelativeLayout>